{
  "transform": {
    ".(js|jsx)": "<rootDir>/node_modules/babel-jest",
    ".(ts|tsx)": "ts-jest"
  },
  "testEnvironment": "jsdom",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js"
  ],
  "coveragePathIgnorePatterns": [
    "/node_modules/",
    "/test/",
    "/src/helpers/styleguide/",
    "/src/index.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 90,
      "functions": 95,
      "lines": 95,
      "statements": 95
    }
  },
  "collectCoverageFrom": [
    "src/**/*.{js,ts,tsx}"
  ],
  "setupFilesAfterEnv": [
    "core-js",
    "./__mocks__/audio-api.ts",
    "./enzyme-setup.ts"
  ]
}
